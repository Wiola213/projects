@model IEnumerable<CosmeticsStoreDB.Models.CartProductModel>
@inject CosmeticsStoreDB.Repositories.CartManager CartManager

@{
    ViewData["Title"] = "Koszyk";
}

<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="mb-0"><i class="bi bi-cart3 me-2"></i>Koszyk (@CartManager.Items.Count)</h1>
        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left-circle me-1"></i>Kontynuuj zakupy
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            Twój koszyk jest pusty. <a asp-controller="Product" asp-action="Index" class="alert-link">Przejdź do produktów</a>.
        </div>
    }
    else
    {
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Produkt</th>
                                <th class="text-center">Ilość</th>
                                <th class="text-end">Cena jedn.</th>
                                <th class="text-end">Wartość</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.ProductName</td>
                                    <td class="text-center">@item.Quantity</td>
                                    <td class="text-end">@item.UnitPrice.ToString("C")</td>
                                    <td class="text-end">@((item.UnitPrice * item.Quantity).ToString("C"))</td>
                                    <td class="text-end">
                                        <form asp-action="Remove" method="post" class="d-inline">
                                            <input type="hidden" name="productId" value="@item.ProductID" />
                                            <button type="submit" class="btn btn-sm btn-danger">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="d-flex justify-content-end mt-3">
                    <h4>Łącznie: <span class="text-success">@ViewBag.Total.ToString("C")</span></h4>
                </div>
                <div class="d-flex justify-content-end mt-3">
                    <a asp-action="Confirmation" class="btn btn-primary btn-lg">
                        <i class="bi bi-card-checklist me-1"></i>Finalizuj zakup
                    </a>
                </div>
            </div>
        </div>
    }
</div>

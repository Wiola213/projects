@model IEnumerable<CosmeticsStoreDB.Models.CartProductModel>

@{
    ViewData["Title"] = "Potwierdzenie zakupu";
}

<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="mb-0"><i class="bi bi-receipt me-2"></i>Podsumowanie zamówienia</h1>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left-circle me-1"></i>Wróć do koszyka
        </a>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-borderless align-middle mb-0">
                    <thead>
                        <tr>
                            <th>Produkt</th>
                            <th class="text-center">Ilość</th>
                            <th class="text-end">Wartość</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ProductName</td>
                                <td class="text-center">@item.Quantity</td>
                                <td class="text-end">@((item.UnitPrice * item.Quantity).ToString("C"))</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <hr />
            <div class="d-flex justify-content-between align-items-center">
                <h4>Do zapłaty:</h4>
                <h3 class="text-success">@ViewBag.Total.ToString("C")</h3>
            </div>
            <form asp-action="CheckoutConfirmed" method="post" class="mt-4 text-end">
                <button type="submit" class="btn btn-success btn-lg">
                    <i class="bi bi-check2-circle me-1"></i>Potwierdź zakup
                </button>
            </form>
        </div>
    </div>
</div>
